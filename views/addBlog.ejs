<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>
<title>Your Blog</title>
<style>
    /* ==== Background wrapper ==== */
    body {
        margin: 0;
        padding: 0;
        background: linear-gradient(-45deg, #0a0a0a, #111, #1a1a1a, #000);
        background-size: 400% 400%;
        animation: gradientShift 18s ease infinite;
        overflow-x: hidden;
        position: relative;
        color: #f5f5f5;
        min-height: 100vh;
    }

    /* ==== Floating Circles ==== */
    body::before {
        content: "";
        position: fixed;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
        background:
            radial-gradient(circle at 20% 20%, rgba(0, 255, 255, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 80% 30%, rgba(255, 0, 255, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 30% 80%, rgba(0, 128, 255, 0.1) 0%, transparent 50%);
        animation: floatCircles 20s ease-in-out infinite;
    }

    @keyframes floatCircles {

        0%,
        100% {
            background-position: 0% 0%, 100% 0%, 0% 100%;
        }

        50% {
            background-position: 10% 10%, 90% 20%, 20% 90%;
        }
    }

    @keyframes gradientShift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    /* ==== Blog Styling ==== */
    h1 {
        font-size: 2.5rem;
        color: #fff;
        margin-bottom: 1rem;
        animation: slideDown 1s ease;
    }

    .blog-image-wrapper {
        width: 100vw;
        /* Full viewport width */
        max-width: 100%;
        height: auto;
        margin: 1.5rem 0;
        overflow: hidden;
        border-radius: 0;
        /* Or 12px if you want rounded */
        position: relative;
        left: 50%;
        transform: translateX(-50%);
    }

    .blog-image {
        width: 100%;
        height: 400px;
        /* Or however tall you want the rectangle */
        object-fit: cover;
        display: block;
        border-radius: 0;
        /* Or 12px if you want rounded */
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.4);
    }

    @media (max-width: 768px) {
        .blog-image {
            height: 250px;
        }
    }

    pre.blog-body {
        white-space: pre-wrap;
        background-color: rgba(25, 25, 25, 0.9);
        padding: 1.5rem;
        border-radius: 10px;
        font-size: 1.1rem;
        line-height: 1.6;
        color: #e6e6e6;
        box-shadow: 0 0 15px rgba(13, 110, 253, 0.3);
    }

    /* ==== Author Image ==== */
    .container img {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.6);
    }

    /* ==== Comment Box ==== */
    .comment-section {
        max-width: 600px;
        margin: 2rem auto;
        padding: 1rem;
        background-color: rgba(30, 30, 30, 0.8);
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 0 20px rgba(0, 123, 255, 0.3);
    }


    .comment-section input.form-control {
        background-color: #1e1e1e;
        color: #fff;
        border: 1px solid #444;
    }

    .comment-section input.form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 8px rgba(13, 110, 253, 0.5);
    }

    .comment-section .btn {
        background-color: #0d6efd;
        border: none;
        font-size: 1.1rem;
        padding: 0.6rem 1.4rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .comment-section .btn:hover {
        transform: scale(1.08);
        box-shadow: 0 0 14px rgba(13, 110, 253, 0.6);
    }

    .comment-section input::placeholder {
        color: #ffffff;
        opacity: 0.8;
        /* Optional: slight transparency */
    }


    /* ==== Each Comment ==== */
    .comment-box {
        background-color: rgba(35, 35, 35, 0.8);
        padding: 1rem;
        margin-top: 1rem;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(13, 110, 253, 0.2);
        animation: fadeInUp 0.6s ease forwards;
    }

    .comment-box img {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        margin-bottom: 0.5rem;
    }

    .comment-box pre {
        margin: 0;
        color: #ccc;
        background: none;
        padding: 0;
    }

    /* Animations */
    @keyframes slideDown {
        from {
            transform: translateY(-30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes fadeInUp {
        from {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .comment-section {
            width: 95%;
        }

        .blog-image {
            max-height: 3000px;
        }
    }
</style>



<body>

    <%- include('./partials/nav') %>
        <div class="container mt-3">
            <h1>
                <%= blog.title %>
            </h1>
        </div>

        <div class="blog-image-wrapper">
            <img src="<%= blog.coverImageURL %>" class="blog-image">
        </div>

        <div class="container">
            <pre class="blog-body mt-3"><%= blog.body %></pre>
        </div>


        <div class="container mt-3 d-flex align-items-center">
            <img src="<%= blog.createdBy.profileImageURL %>">
            <span class="ms-2">
                <%= blog.createdBy.fullname %>
            </span>
        </div>

        <% if (user) { %>
            <div class="comment-section">
                <form action="/blog/comment/<%= blog._id %>" method="POST">
                    <input type="text" name="content" placeholder="Write a comment..." class="form-control mb-2"
                        required>
                    <button class="btn btn-primary">Add</button>
                </form>
            </div>
            <div class="container mt-3">
                <form id="like-form" action="/blog/<%= blog._id %>/like" method="POST">
                    <button class="btn btn-outline-primary" type="submit">
                        ❤️ Like (<%= blog.likesCount %>)
                    </button>
                </form>
            </div>
            <% } %>

                <div class="container mt-3" style="width: 70%;">
                    <h3>Comments (<%= comments.length %>)</h3>
                    <% comments.forEach((comment, i)=> { %>
                        <div class="comment-box" data-animation-delay="<%= (i * 0.1) %>">
                            <img src="<%= comment.createdBy.profileImageURL %>">
                            <strong>
                                <%= comment.createdBy.fullname %>:
                            </strong>
                            <pre style="margin: 8px 0 0 0;"><%= comment.content %></pre>
                        </div>
                        <% }) %>

                </div>

                <!-- Like Button -->



                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        // Set animation-delay for each comment-box
                        document.querySelectorAll('.comment-box[data-animation-delay]').forEach(function (el) {
                            const delay = el.getAttribute('data-animation-delay');
                            el.style.animationDelay = delay + 's';
                        });

                        const btn = document.getElementById('view-stats-btn');
                        if (btn) {
                            btn.addEventListener('click', function () {
                                fetch('/blog/<%= blog._id %>/stats')
                                    .then(res => {
                                        if (!res.ok) throw new Error('Not authorized or error fetching stats!');
                                        return res.json();
                                    })
                                    .then(data => {
                                        const statsDiv = document.getElementById('stats-container');
                                        statsDiv.style.display = 'block';
                                        let html = `
                        <h4>Stats</h4>
                        <strong>Views:</strong> ${data.viewsCount}<br>
                        <strong>Likes:</strong> ${data.likesCount}<br>
                        <br>
                        <strong>Viewed by:</strong>
                        <ul>
                            ${data.views.map(u => `<li>${u.name} &lt;${u.email}&gt;</li>`).join('')}
                        </ul>
                        <strong>Liked by:</strong>
                        <ul>
                            ${data.likes.map(u => `<li>${u.name} &lt;${u.email}&gt;</li>`).join('')}
                        </ul>
                    `;
                                        statsDiv.innerHTML = html;
                                    })
                                    .catch(err => {
                                        alert(err.message || "Something went wrong!");
                                    })
                            });
                        }
                    });
                </script>

                <%- include('./partials/script') %>

</body>

</html>