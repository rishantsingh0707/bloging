<style>
  /* Glass-like Animated Navbar CSS */
  .navbar {
    background: rgba(13, 17, 23, 0.85) !important;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: visible !important;
    height: 90px;
  }

  /* Animated background gradient */
  .navbar::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    0% {
      left: -100%;
    }

    100% {
      left: 100%;
    }
  }

  /* Enhanced navbar on scroll */
  .navbar.scrolled {
    background: rgba(13, 17, 23, 0.95) !important;
    backdrop-filter: blur(30px);
    -webkit-backdrop-filter: blur(30px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  /* Brand styling with glass effect */
  .navbar-brand {
    position: relative;
    z-index: 2;
    background: linear-gradient(135deg, #ffffff, #e0e7ff, #ffffff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700 !important;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
  }

  .navbar-brand:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.4));
  }

  /* Navigation links with glass effect */
  .nav-link {
    position: relative;
    color: rgba(255, 255, 255, 0.9) !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 8px;
    margin: 0 4px;
    padding: 8px 16px !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    z-index: 2;
  }

  .nav-link::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    border-radius: 8px;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .nav-link:hover::before {
    opacity: 1;
  }

  .nav-link:hover {
    color: #ffffff !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Dropdown styling */
  .dropdown-menu {
    background: rgba(13, 17, 23, 0.9) !important;
    backdrop-filter: blur(20px);
    position: absolute !important;
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1) !important;
    border-radius: 12px !important;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    margin-top: 8px;
    height: fit-content;
    z-index: 1100 !important;
  }

  .dropdown-item {
    color: rgba(255, 255, 255, 0.9) !important;
    transition: all 0.3s ease;
    border-radius: 8px;
    margin: 4px 8px;
  }

  .dropdown-item:hover {
    background: rgba(255, 255, 255, 0.1) !important;
    color: #ffffff !important;
    transform: translateX(4px);
    width: 85% ;
  }

  /* Navbar toggler with glass effect */
  .navbar-toggler {
    border: 1px solid rgba(255, 255, 255, 0.2) !important;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .navbar-toggler:hover {
    background: rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
  }

  .navbar-toggler-icon {
    filter: brightness(0) invert(1);
  }

  /* Floating orbs animation */
  .navbar::after {
    content: "";
    position: absolute;
    top: -50%;
    right: 20%;
    width: 100px;
    height: 100px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1), transparent);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
    z-index: 1;
  }

  @keyframes float {

    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }

    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  /* Responsive enhancements */
  @media (max-width: 991.98px) {
    .navbar-collapse {
      background: rgba(13, 17, 23, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border-radius: 12px;
      margin-top: 16px;
      padding: 16px;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-link {
      margin: 4px 0;
    }
  }

  /* Scroll behavior enhancement */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  /* Add this class via JavaScript when page scrolls */
  .navbar.glass-enhanced {
    background: rgba(13, 17, 23, 0.98) !important;
    backdrop-filter: blur(40px);
    -webkit-backdrop-filter: blur(40px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
  }
</style>
<nav class="navbar navbar-expand-lg bg-dark text-white sticky-top p-3" data-bs-theme="dark" style="margin-bottom: 0;">
  <div class="container-fluid">
    <a class="navbar-brand text-white fw-bold" href="/">Blogify</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ms-auto">
        <% if (user) { %>
          <% if (user.fullname) { %>
            <li class="nav-item">
              <a class="nav-link text-white" href="/blog/addBlog">Add Blog</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                <%= user.fullname %>
              </a>
              <ul class="dropdown-menu dropdown-menu-dark">
                <li><a class="dropdown-item" href="/user/logout">Log Out</a></li>
              </ul>
            </li>
            <% } %>
              <% } else { %>
                <li class="nav-item">
                  <a class="nav-link text-white" href="/user/signup">Create Account</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-white" href="/user/signin">Signin</a>
                </li>
                <% } %>
      </ul>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert">
      <%= locals.error %>
    </div>
  </div>
  <% } %>